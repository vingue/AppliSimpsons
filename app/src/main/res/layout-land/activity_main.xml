<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/cloud"

        tools:context=".MainActivity"
       >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/cloud"

        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
        <ImageButton
            android:id="@+id/button1"
            android:background="@android:color/transparent"
            android:layout_width="210dp"

            android:src="@drawable/serie2"

            android:layout_height="190dp"

            android:onClick="serieAffiche"

            android:scaleType="fitXY"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"

            />
        <Button


            android:id="@+id/button_serie"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="-8dp"
            android:layout_height="30dp"
            android:layout_width="210dp"
            android:background="#FFD700"
            android:onClick="serieAffiche"
            android:src="@drawable/image"
            android:layout_below="@id/button1"
            android:text="@string/serie"


            />

        <ImageButton
            android:id="@+id/button2"
            android:background="@android:color/transparent"
            android:layout_width="210dp"


            android:src="@drawable/perso"

            android:layout_height="190dp"
            android:onClick="persoList"

            android:scaleType="fitXY"

            android:layout_marginLeft="360dp"
            android:layout_marginTop="30dp" />


            <Button

                android:text="@string/character"
                android:id="@+id/button_perso"
                android:onClick="persoList"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="-8dp"
                android:layout_height="30dp"
                android:layout_width="210dp"
                android:background="#FFD700"
                android:src="@drawable/image"
                android:layout_below="@id/button2"

                />

        <ImageButton
            android:id="@+id/button3"
            android:background="@android:color/transparent"
            android:layout_width="210dp"

            android:src="@drawable/episode"

            android:layout_height="190dp"
            android:onClick="episodeList"

            android:scaleType="fitXY"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="260dp"
            />

            <Button

                android:text="@string/seasons"
                android:id="@+id/button_epi"
                android:onClick="episodeList"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-8dp"
                android:layout_height="30dp"
                android:layout_width="210dp"
                android:background="#FFD700"
                android:src="@drawable/image"
                android:layout_below="@id/button3"


                />



            <ImageButton
            android:id="@+id/button4"
            android:background="@android:color/transparent"
            android:layout_width="210dp"
                android:onClick="quoteList"
            android:src="@drawable/quote"

            android:layout_height="190dp"


            android:scaleType="fitXY"

            android:layout_marginLeft="360dp"
            android:layout_marginTop="260dp" />



            <Button


                android:text="@string/quotes"

                android:onClick="quoteList"
                android:id="@+id/button_quote"

                android:layout_marginLeft="360dp"
                android:layout_marginTop="-8dp"
                android:layout_height="30dp"
                android:layout_width="210dp"
                android:background="#FFD700"
                android:src="@drawable/image"
                android:layout_below="@id/button4"

                />


        <ImageButton
            android:id="@+id/button5"
            android:background="@android:color/transparent"
            android:layout_width="210dp"

            android:onClick="savoirList"
            android:src="@drawable/anec"

            android:layout_height="190dp"


            android:scaleType="fitXY"

            android:layout_marginLeft="70dp"
            android:layout_marginTop="490dp"
            />

            <Button


                android:text="@string/didknow"

                android:id="@+id/button_anec"
                android:onClick="savoirList"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="-8dp"
                android:layout_height="30dp"
                android:layout_width="210dp"
                android:background="#FFD700"
                android:src="@drawable/image"
                android:layout_below="@id/button5"


                />


            <ImageButton
            android:id="@+id/button6"
            android:background="@android:color/transparent"
            android:layout_width="210dp"

            android:src="@drawable/good"
                android:onClick="goodiesList"
            android:layout_height="190dp"


            android:scaleType="fitXY"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="490dp" />


            <Button


                android:text="@string/goodies"
                android:id="@+id/button_goodies"
                android:onClick="goodiesList"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="30dp"
                android:layout_height="30dp"
                android:layout_width="210dp"
                android:background="#FFD700"
                android:src="@drawable/image"
                android:layout_below="@id/button6"

                />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

