<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_savoir_element_name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="7dp"

            android:layout_marginTop="5dp"
            android:background="@drawable/rond"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/rv_savoir_element_image"
            android:layout_below="@+id/rv_savoir_element_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_savoir_element_content"
            android:layout_marginLeft="7dp"
            android:layout_below="@+id/rv_savoir_element_image"
            android:background="@drawable/rond"

            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

</LinearLayout>