<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_guest">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_perso_element_name_guest"
            style="@style/Text"
            android:layout_marginLeft="7dp"

            android:layout_marginTop="5dp"
            android:background="@drawable/rond"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/rv_perso_element_image_guest"
            android:layout_below="@+id/rv_perso_element_name_guest"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_perso_element_contenu_guest"
            android:layout_marginLeft="7dp"
            android:layout_below="@+id/rv_perso_element_image_guest"
            android:background="@drawable/rond"

            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

</LinearLayout>